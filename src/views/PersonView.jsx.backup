import React, { useState } from 'react';
import { contactData } from '../data/mockData';
import { getInitials } from '../utils/helpers';
import { useContactSync } from '../hooks/useContactSync';

function PersonView() {
    const [selectedIds, setSelectedIds] = useState([]);
    const [searchTerm, setSearchTerm] = useState('');
    const [currentPage, setCurrentPage] = useState(1);
    const [recordsPerPage, setRecordsPerPage] = useState(25);
    const [viewMode, setViewMode] = useState('list'); // 'list' or 'card'

    const { syncMultipleContacts } = useContactSync();

    // Bulk sync handler
    const handleBulkSync = async () => {
        const contactsToSync = contactData.filter(c => selectedIds.includes(c.mobile));
        if (contactsToSync.length === 0) {
            alert('Please select contacts to sync');
            return;
        }
        const result = await syncMultipleContacts(contactsToSync);
        if (result.success) {
            const totalSynced = result.results.google.synced + result.results.apple.synced;
            alert(`✅ Successfully synced ${totalSynced} contact(s)!`);
            setSelectedIds([]);
        } else {
            alert('❌ Sync failed: ' + result.error);
        }
    };

    // Filtering
    const filteredContacts = contactData.filter(contact =>
        contact.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
        contact.mobile.includes(searchTerm) ||
        (contact.email && contact.email.toLowerCase().includes(searchTerm.toLowerCase()))
    );

    // Selection handlers
    const toggleSelect = (mobile) => {
        setSelectedIds(prev =>
            prev.includes(mobile) ? prev.filter(id => id !== mobile) : [...prev, mobile]
        );
    };

    const isSelected = (mobile) => selectedIds.includes(mobile);
    const totalCount = contactData.length;
    const selectedCount = selectedIds.length;

    // Pagination
    const indexOfLastRecord = currentPage * recordsPerPage;
    const indexOfFirstRecord = indexOfLastRecord - recordsPerPage;
    const paginatedContacts = filteredContacts.slice(indexOfFirstRecord, indexOfLastRecord);
    const totalPages = Math.ceil(filteredContacts.length / recordsPerPage);

    // Grouping
    const groups = {};
    paginatedContacts.forEach(c => {
        if (!groups[c.group]) groups[c.group] = [];
        groups[c.group].push(c);
    });

    const goToNextPage = () => currentPage < totalPages && setCurrentPage(currentPage + 1);
    const goToPreviousPage = () => currentPage > 1 && setCurrentPage(currentPage - 1);
    const handleRecordsPerPageChange = (e) => {
        setRecordsPerPage(Number(e.target.value));
        setCurrentPage(1);
    };

    return (
        <section id="personView" className="view-section active">
            <div className="view-scroll-wrapper">
                {/* Header Section - Professional */}
                <div className="page-header">
                    <div className="page-title-group">
                        <i className="fas fa-bars text-[#68737d]" />
                        <div>
                            <span className="working-list-label">Database CRM</span>
                            <h1>Contacts Portfolio</h1>
                        </div>
                    </div>
                    <div className="flex gap-3 items-center">
                        <button
                            className="btn-outline flex items-center gap-2 transition-all duration-200 hover:bg-blue-50 hover:border-blue-400"
                            onClick={handleBulkSync}
                        >
                            <i className="fas fa-sync-alt" />
                            Sync Contacts
                        </button>
                        <button className="btn-outline transition-all duration-200 hover:bg-blue-50 hover:border-blue-400">
                            Download CSV
                        </button>
                        <button className="btn-outline transition-all duration-200 hover:bg-blue-50 hover:border-blue-400">
                            <i className="fas fa-filter" /> Filters
                        </button>
                    </div>
                </div>

                <div className="content-body overflow-y-visible pt-0 relative">
                    {/* Toolbar Section - Modern */}
                    <div className="sticky top-0 z-[101] py-4 px-8 border-b border-gray-200 min-h-[65px] flex items-center bg-white shadow-sm">
                        <div className="flex justify-between items-center w-full">
                            {/* Search Input */}
                            <div className="relative w-[350px]">
                                <input
                                    type="text"
                                    className="search-input-premium w-full"
                                    placeholder="Search by name, phone or email..."
                                    value={searchTerm}
                                    onChange={(e) => setSearchTerm(e.target.value)}
                                />
                                <i className={`fas fa-search search-icon-premium ${searchTerm ? 'active' : ''}`} />
                            </div>

                            {/* Right Controls */}
                            <div className="flex items-center gap-4">
                                {/* Showing Count */}
                                <div className="text-xs text-gray-600 font-medium">
                                    Showing: <strong className="text-gray-900 font-semibold">{paginatedContacts.length}</strong> / <strong className="text-gray-900 font-semibold">{totalCount}</strong>
                                </div>

                                {/* Records Per Page */}
                                <div className="flex items-center gap-2 text-xs text-gray-600">
                                    <span className="font-medium">Show:</span>
                                    <select
                                        value={recordsPerPage}
                                        onChange={handleRecordsPerPageChange}
                                        className="px-2 py-1.5 border border-gray-300 rounded-md text-xs font-semibold text-gray-900 bg-white cursor-pointer transition-all duration-200 hover:border-blue-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-100 outline-none"
                                    >
                                        <option value={10}>10</option>
                                        <option value={25}>25</option>
                                        <option value={50}>50</option>
                                        <option value={100}>100</option>
                                        <option value={300}>300</option>
                                        <option value={500}>500</option>
                                        <option value={700}>700</option>
                                        <option value={1000}>1000</option>
                                    </select>
                                </div>

                                {/* Pagination Controls */}
                                <div className="flex items-center gap-2">
                                    <button
                                        onClick={goToPreviousPage}
                                        disabled={currentPage === 1}
                                        className={`px-3 py-1.5 border rounded-md text-xs font-medium transition-all duration-200 ${currentPage === 1
                                            ? 'bg-gray-100 text-gray-400 border-gray-200 cursor-not-allowed'
                                            : 'bg-white text-gray-900 border-gray-300 hover:bg-gray-50 hover:border-blue-400 cursor-pointer'
                                            }`}
                                    >
                                        <i className="fas fa-chevron-left mr-1" /> Prev
                                    </button>
                                    <span className="text-xs font-semibold text-gray-900 min-w-[60px] text-center">
                                        {currentPage} / {totalPages || 1}
                                    </span>
                                    <button
                                        onClick={goToNextPage}
                                        disabled={currentPage >= totalPages}
                                        className={`px-3 py-1.5 border rounded-md text-xs font-medium transition-all duration-200 ${currentPage >= totalPages
                                            ? 'bg-gray-100 text-gray-400 border-gray-200 cursor-not-allowed'
                                            : 'bg-white text-gray-900 border-gray-300 hover:bg-gray-50 hover:border-blue-400 cursor-pointer'
                                            }`}
                                    >
                                        Next <i className="fas fa-chevron-right ml-1" />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Table Header - Professional Typography */}
                    <div className="list-header contact-list-grid sticky top-[65px] bg-[#fafbfc] z-[100] border-b border-gray-200">
                        <div className="flex items-center">
                            <input type="checkbox" className="w-4 h-4" />
                        </div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">Personal Details</div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">Location & Address</div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">Professional Detail</div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">Source & Tags</div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">CRM Linkage</div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">Last Interaction</div>
                        <div className="text-[10px] font-bold text-gray-500 uppercase tracking-wide">Assigned</div>
                    </div>

                    {/* Data List - Eye-catching Interactions */}
                    <div id="personListContent">
                        {Object.keys(groups).map(groupName => (
                            <div key={groupName} className="list-group">
                                <div className="px-8 py-2.5 text-[10px] font-bold text-gray-400 uppercase tracking-wider bg-white border-b border-gray-100">
                                    {groupName.toUpperCase()}
                                </div>
                                {groups[groupName].map((item, idx) => (
                                    <div
                                        key={item.mobile}
                                        className={`list-item contact-list-grid py-4 px-8 border-b border-gray-100 transition-all duration-200 ${isSelected(item.mobile)
                                            ? 'bg-blue-50 border-l-4 border-l-blue-500'
                                            : 'bg-white hover:bg-gray-50 border-l-4 border-l-transparent'
                                            }`}
                                    >
                                        {/* Checkbox */}
                                        <div className="flex items-center">
                                            <input
                                                type="checkbox"
                                                className="w-4 h-4 cursor-pointer transition-all duration-200"
                                                checked={isSelected(item.mobile)}
                                                onChange={() => toggleSelect(item.mobile)}
                                            />
                                        </div>

                                        {/* Personal Details */}
                                        <div className="flex items-center gap-3">
                                            <div className={`avatar-circle avatar-${(idx % 5) + 1} w-10 h-10 text-sm flex items-center justify-center font-bold transition-transform duration-200 hover:scale-110`}>
                                                {getInitials(item.name)}
                                            </div>
                                            <div className="flex flex-col">
                                                <div className="text-sm font-bold text-gray-900">{item.name}</div>
                                                <div className="text-xs text-gray-600 font-medium">{item.mobile}</div>
                                                {item.email && (
                                                    <div className="text-xs text-purple-700 flex items-center gap-1 mt-0.5 font-medium">
                                                        <i className="fas fa-envelope text-[10px]" />
                                                        {item.email}
                                                    </div>
                                                )}
                                            </div>
                                        </div>

                                        {/* Location & Address */}
                                        <div className="flex items-start gap-2">
                                            <i className="fas fa-map-marker-alt text-red-500 text-xs mt-1" />
                                            <div className="text-xs text-gray-700 leading-relaxed font-medium">
                                                {item.address || 'Address not listed'}
                                            </div>
                                        </div>

                                        {/* Professional Detail */}
                                        <div className="flex flex-col gap-1.5">
                                            <span className="prof-badge text-[10px] py-1 px-2.5 font-extrabold uppercase inline-block w-fit transition-all duration-200 hover:scale-105">
                                                {item.professional.toUpperCase()}
                                            </span>
                                            <div className="text-sm font-semibold text-gray-900">{item.designation}</div>
                                            <div className="text-xs text-gray-600 flex items-center gap-1 font-medium">
                                                <i className="fas fa-building text-[10px]" />
                                                {item.company}
                                            </div>
                                        </div>

                                        {/* Source & Tags */}
                                        <div className="flex flex-col gap-1.5">
                                            <span className="inline-flex items-center gap-1 px-2 py-1 rounded text-[11px] font-semibold bg-purple-100 text-purple-800 w-fit transition-all duration-200 hover:bg-purple-200">
                                                <i className="fas fa-tag text-[9px]" />
                                                {item.source}
                                            </span>
                                            {item.tags && item.tags !== '-' && (
                                                <div className="text-xs text-gray-600 font-medium">{item.tags}</div>
                                            )}
                                        </div>

                                        {/* CRM Linkage */}
                                        <div className="flex flex-wrap gap-1">
                                            {item.crmLinks && Object.keys(item.crmLinks).length > 0 ? (
                                                <>
                                                    {item.crmLinks.leads && (
                                                        <span className="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-bold bg-blue-100 text-blue-800 transition-all duration-200 hover:bg-blue-200">
                                                            <i className="fas fa-user-plus text-[9px]" />
                                                            Leads ({item.crmLinks.leads})
                                                        </span>
                                                    )}
                                                    {item.crmLinks.deals && (
                                                        <span className="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-bold bg-green-100 text-green-800 transition-all duration-200 hover:bg-green-200">
                                                            <i className="fas fa-handshake text-[9px]" />
                                                            Deals ({item.crmLinks.deals})
                                                        </span>
                                                    )}
                                                    {item.crmLinks.property && (
                                                        <span className="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-bold bg-yellow-100 text-yellow-800 transition-all duration-200 hover:bg-yellow-200">
                                                            <i className="fas fa-building text-[9px]" />
                                                            Property ({item.crmLinks.property})
                                                        </span>
                                                    )}
                                                    {item.crmLinks.booking && (
                                                        <span className="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-bold bg-pink-100 text-pink-800 transition-all duration-200 hover:bg-pink-200">
                                                            <i className="fas fa-calendar-check text-[9px]" />
                                                            Booking ({item.crmLinks.booking})
                                                        </span>
                                                    )}
                                                    {item.crmLinks.project && (
                                                        <span className="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-bold bg-indigo-100 text-indigo-800 transition-all duration-200 hover:bg-indigo-200">
                                                            <i className="fas fa-project-diagram text-[9px]" />
                                                            Project ({item.crmLinks.project})
                                                        </span>
                                                    )}
                                                    {item.crmLinks.activities && (
                                                        <span className="inline-flex items-center gap-1 px-1.5 py-0.5 rounded text-[10px] font-bold bg-orange-100 text-orange-800 transition-all duration-200 hover:bg-orange-200">
                                                            <i className="fas fa-tasks text-[9px]" />
                                                            Activities ({item.crmLinks.activities})
                                                        </span>
                                                    )}
                                                </>
                                            ) : (
                                                <span className="text-xs text-gray-300">-</span>
                                            )}
                                        </div>

                                        {/* Last Interaction */}
                                        <div className="flex flex-col gap-1">
                                            <div className="text-sm font-semibold text-gray-900">{item.lastComm}</div>
                                            <div className="text-xs text-gray-500 font-medium">Active: {item.actionable}</div>
                                            <div className="flex items-center gap-2.5 mt-1">
                                                <i className="fas fa-phone-alt text-green-600 text-xs transition-transform duration-200 hover:scale-125" />
                                                <i className="fab fa-whatsapp text-green-500 text-xs transition-transform duration-200 hover:scale-125" />
                                            </div>
                                        </div>

                                        {/* Assigned */}
                                        <div className="flex items-center gap-2.5">
                                            <div className="w-7 h-7 rounded-full bg-gray-200 text-gray-600 flex items-center justify-center text-xs font-semibold transition-all duration-200 hover:bg-gray-300">
                                                {item.ownership.charAt(0)}
                                            </div>
                                            <div className="flex flex-col">
                                                <div className="text-sm font-bold text-gray-900">{item.ownership}</div>
                                                <div className="text-[10px] text-gray-500 font-medium">Added {item.addOnDate}</div>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        ))}
                    </div>
                </div>
            </div>

            {/* Footer - Summary Stats */}
            <footer className="summary-footer h-14 px-8 flex items-center justify-between bg-white border-t border-gray-200">
                <div className="px-3 py-1.5 bg-gray-700 text-white rounded text-[10px] font-bold uppercase tracking-wide">
                    Summary
                </div>
                <div className="flex items-center gap-5">
                    <div className="text-xs text-gray-600 font-medium">
                        Total Contacts <strong className="ml-1 text-gray-900 font-bold">{totalCount}</strong>
                    </div>
                    <div className="text-xs text-gray-600 font-medium">
                        Customers <strong className="ml-1 text-gray-900 font-bold">{contactData.filter(c => c.category === 'Customer').length}</strong>
                    </div>
                    <div className="text-xs text-gray-600 font-medium">
                        Prospects <strong className="ml-1 text-gray-900 font-bold">{contactData.filter(c => c.category === 'Prospect').length}</strong>
                    </div>
                    <div className="text-xs text-blue-600 font-medium">
                        Real Estate Agents <strong className="ml-1 text-blue-700 font-bold">{contactData.filter(c => c.category === 'Real Estate Agent').length}</strong>
                    </div>
                </div>
            </footer>
        </section>
    );
}

export default PersonView;
